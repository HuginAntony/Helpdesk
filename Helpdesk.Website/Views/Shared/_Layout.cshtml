<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/charts")
    @Scripts.Render("~/bundles/helpdeskCustom")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="container body-content">
        @Html.Partial("_Menu")
        @RenderBody()
    </div>
    <br />
    <br />
    <div class="navbar navbar-inverse navbar-fixed-bottom text-center text-muted">
        &copy; @DateTime.Now.Year
    </div>

    @RenderSection("scripts", required: false)
<script>
    $(document).ready(function () {
        if (this.location.pathname !== '/Home/Login' && this.location.pathname.substring(0, this.location.pathname.length -2) !== '/Home/ManageUser') {
            $('a').parents('li,ul').removeClass('active');
            $('a[href="' + this.location.pathname + '"]').parents('li,ul').addClass('active');
        } else if (this.location.pathname.substring(0, this.location.pathname.length - 2) === '/Home/ManageUser') {
            $('a').parents('li,ul').removeClass('active');
            $('a[href="/Home/Users"]').parents('li,ul').addClass('active');
        }
        });
</script>
</body>
</html>
